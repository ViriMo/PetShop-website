{% extends 'base.html.twig' %}

{% block body %}
    {% if not app.user %}
        <h1>
            Access Denied
        </h1>
    <p>
        You don't have permission to access 'sell' page on this server. <br/>
        Log in to the website if you want to go to this page !
    </p>

    {% else %}
    <h1>
        Sell your pet here
    </h1>
    {{ form_start(formPet) }}

    {{ form_row(formPet.name, {'attr': {'placeholder': "Pet name" }, 'label': "Pet name"}) }}

    {{ form_row(formPet.price, {'attr': {'placeholder': "Pet price (in â‚¬)" }, 'label': "Pet price"}) }}

    {{ form_row(formPet.image, {'attr': {'placeholder': "insert image" }, 'label': "Pet image"}) }}

    {{ form_row(formPet.content, {'attr': {'placeholder': "Description of your pet" }, 'label': "Description"}) }}

    <p>
        <button type="submit" class="btn btn-success">
            Sell
        </button>
    </p>

    {{ form_end(formPet) }}

    {% endif %}
{% endblock body %}